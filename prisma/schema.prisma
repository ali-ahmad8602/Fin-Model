// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  name      String
  password  String
  role      String   @default("VIEWER") // "ADMIN" | "VIEWER"
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Fund {
  id                String   @id @default(uuid())
  name              String
  totalRaised       Float
  costOfCapitalRate Float
  loans             Loan[]
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
}

model Loan {
  id             String        @id @default(uuid())
  fundId         String
  fund           Fund          @relation(fields: [fundId], references: [id], onDelete: Cascade)
  borrowerName   String
  principal      Float
  interestRate   Float
  startDate      DateTime
  durationDays   Int
  status         String        // "ACTIVE" | "CLOSED" | "DEFAULTED"
  repaymentType  String        @default("BULLET")
  defaultedAmount Float?
  variableCosts  CostItem[]
  installments   Installment[]
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt
}

model CostItem {
  id         String @id @default(uuid())
  loanId     String
  loan       Loan   @relation(fields: [loanId], references: [id], onDelete: Cascade)
  name       String
  percentage Float
}

model Installment {
  id                 String   @id @default(uuid())
  loanId             String
  loan               Loan     @relation(fields: [loanId], references: [id], onDelete: Cascade)
  dueDate            DateTime
  amount             Float
  principalComponent Float
  interestComponent  Float
  status             String   @default("PENDING") // "PENDING" | "PAID" | "OVERDUE"
}
